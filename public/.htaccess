# Configuration pour hébergement mutualisé Apache
# Biso Ticket - Configuration .htaccess

# Activer la réécriture d'URL
RewriteEngine On

# Redirection HTTPS (optionnel, décommentez si nécessaire)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Gestion des routes SPA pour les pages dynamiques
# Rediriger toutes les requêtes vers index.html pour les routes dynamiques
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/evenements/[^/]+$
RewriteCond %{REQUEST_URI} !^/invitation/[^/]+$
RewriteCond %{REQUEST_URI} !^/blog/[^/]+$
RewriteCond %{REQUEST_URI} !^/organisateur/[^/]+$
RewriteRule ^.*$ /index.html [L]

# Gestion spécifique des routes dynamiques (SPA)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/(evenements|invitation|blog|organisateur)/
RewriteRule ^.*$ /index.html [L]

# Headers de sécurité
<IfModule mod_headers.c>
    # Headers de sécurité pour Google OAuth
    Header always set Cross-Origin-Opener-Policy "same-origin-allow-popups"
    Header always set Cross-Origin-Embedder-Policy "unsafe-none"
    
    # Headers de sécurité généraux
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    
    # Cache pour les assets statiques
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # Cache pour les pages HTML
    <FilesMatch "\.(html)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Gestion des erreurs personnalisées
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# Désactiver l'affichage des répertoires
Options -Indexes

# Protection des fichiers sensibles
<FilesMatch "\.(env|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>
